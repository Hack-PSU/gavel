# HackPSU Firebase Authentication Configuration
# Copy this file to .env and fill in the values

# Environment for Firebase custom claims (production or staging)
AUTH_ENVIRONMENT=production

# Minimum role levels for access control
MIN_JUDGE_ROLE=2
MIN_ADMIN_ROLE=4

# Database configuration
DATABASE_URL=postgresql://localhost/gavel
DB_URI=postgresql://localhost/gavel

# Redis configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
BROKER_URI=redis://localhost:6379/0

# Flask secret key (generate a random string)
SECRET_KEY=your-secret-key-here

# Email configuration (set DISABLE_EMAIL=true if not using email)
DISABLE_EMAIL=true
EMAIL_FROM=noreply@hackpsu.org
EMAIL_USER=your-email@hackpsu.org
EMAIL_PASSWORD=your-email-password

# Server configuration
PROXY=false
# SERVER_NAME=gavel.hackpsu.org  # Uncomment and set if needed

# Judging parameters
MIN_VIEWS=2
TIMEOUT=5.0

# Telemetry (optional - sends anonymous usage stats)
SEND_STATS=false
